@{
    ViewData["Title"] = "Drivers";
    Layout = "_AdminLayout";
}

<!-- Toolbar -->
<div class="admin-toolbar d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    <div class="admin-search flex-grow-1" style="max-width: 400px;">
        <span class="material-symbols-outlined">search</span>
        <input type="text" class="form-control" id="search-input" placeholder="Search drivers...">
    </div>
    <button class="btn btn-admin-primary" data-bs-toggle="modal" data-bs-target="#driverModal" onclick="openAddModal()">
        <span class="material-symbols-outlined">add</span>
        Add Driver
    </button>
</div>

<!-- Drivers Table -->
<div class="admin-card">
    <div class="table-responsive">
        <table class="table table-admin">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>License Number</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody id="drivers-table">
                <tr>
                    <td colspan="6" class="text-center py-5">
                        <div class="spinner-admin mx-auto"></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="driverModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add Driver</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="driver-form" onsubmit="saveDriver(event)">
                <div class="modal-body">
                    <input type="hidden" id="driver-id">
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label" for="driver-firstname">First Name *</label>
                            <input type="text" class="form-control" id="driver-firstname" placeholder="First name" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="driver-lastname">Last Name *</label>
                            <input type="text" class="form-control" id="driver-lastname" placeholder="Last name" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label" for="driver-license">License Number *</label>
                        <input type="text" class="form-control" id="driver-license" placeholder="Driver's license number" required>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="driver-phone">Phone</label>
                            <input type="tel" class="form-control" id="driver-phone" placeholder="+962 7XX XXX XXX">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="driver-email">Email</label>
                            <input type="email" class="form-control" id="driver-email" placeholder="driver@example.com">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-admin-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-admin-primary" id="save-btn">Save Driver</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalTitle">Delete Driver</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this driver? This action cannot be undone.</p>
                <input type="hidden" id="delete-driver-id">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-admin-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-admin-danger" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
let allDrivers = [];
let driverModal, deleteModal;

document.addEventListener('DOMContentLoaded', async function() {
    // Initialize Bootstrap modals
    driverModal = new bootstrap.Modal(document.getElementById('driverModal'));
    deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    
    await loadData();
    
    // Setup search
    document.getElementById('search-input').addEventListener('input', (e) => {
        renderDrivers(filterDrivers(e.target.value));
    });
});

async function loadData() {
    try {
        allDrivers = await DriversAPI.getAll();
        renderDrivers(allDrivers);
    } catch (error) {
        console.error('Failed to load data:', error);
        showToast('Failed to load drivers', 'error');
    }
}

function filterDrivers(query) {
    if (!query) return allDrivers;
    query = query.toLowerCase();
    return allDrivers.filter(d => 
        (d.firstName || '').toLowerCase().includes(query) ||
        (d.lastName || '').toLowerCase().includes(query) ||
        (d.licenseNumber || '').toLowerCase().includes(query) ||
        (d.email || '').toLowerCase().includes(query)
    );
}

function renderDrivers(drivers) {
    const tbody = document.getElementById('drivers-table');
    
    if (drivers.length === 0) {
        tbody.innerHTML = `
            <tr>
                <td colspan="6">
                    <div class="empty-state">
                        <span class="material-symbols-outlined empty-state__icon">badge</span>
                        <div class="empty-state__title">No drivers found</div>
                        <div class="empty-state__text">Add your first driver to get started</div>
                    </div>
                </td>
            </tr>
        `;
        return;
    }
    
    tbody.innerHTML = drivers.map(d => `
        <tr>
            <td class="text-muted">#${d.driverId}</td>
            <td><strong>${d.firstName || ''} ${d.lastName || ''}</strong></td>
            <td>${d.licenseNumber || '-'}</td>
            <td>${d.phoneNumber || '<span class="text-muted">-</span>'}</td>
            <td>${d.email || '<span class="text-muted">-</span>'}</td>
            <td>
                <div class="d-flex gap-2">
                    <button class="btn btn-action btn-action-edit" onclick="editDriver(${d.driverId})" title="Edit">
                        <span class="material-symbols-outlined">edit</span>
                    </button>
                    <button class="btn btn-action btn-action-delete" onclick="deleteDriver(${d.driverId})" title="Delete">
                        <span class="material-symbols-outlined">delete</span>
                    </button>
                </div>
            </td>
        </tr>
    `).join('');
}

function openAddModal() {
    document.getElementById('modalTitle').textContent = 'Add Driver';
    document.getElementById('driver-form').reset();
    document.getElementById('driver-id').value = '';
}

function editDriver(id) {
    const driver = allDrivers.find(d => d.driverId === id);
    if (!driver) return;
    
    document.getElementById('modalTitle').textContent = 'Edit Driver';
    document.getElementById('driver-id').value = id;
    document.getElementById('driver-firstname').value = driver.firstName || '';
    document.getElementById('driver-lastname').value = driver.lastName || '';
    document.getElementById('driver-license').value = driver.licenseNumber || '';
    document.getElementById('driver-phone').value = driver.phoneNumber || '';
    document.getElementById('driver-email').value = driver.email || '';
    
    driverModal.show();
}

async function saveDriver(event) {
    event.preventDefault();
    
    const id = document.getElementById('driver-id').value;
    const data = {
        driverId: id ? parseInt(id) : 0,
        firstName: document.getElementById('driver-firstname').value,
        lastName: document.getElementById('driver-lastname').value,
        licenseNumber: document.getElementById('driver-license').value,
        phoneNumber: document.getElementById('driver-phone').value || null,
        email: document.getElementById('driver-email').value || null
    };
    
    const saveBtn = document.getElementById('save-btn');
    
    try {
        saveBtn.disabled = true;
        saveBtn.innerHTML = '<span class="spinner-admin"></span>';
        
        if (id) {
            await DriversAPI.update(id, data);
            showToast('Driver updated successfully', 'success');
        } else {
            await DriversAPI.create(data);
            showToast('Driver added successfully', 'success');
        }
        
        driverModal.hide();
        await loadData();
    } catch (error) {
        console.error('Failed to save driver:', error);
        showToast('Failed to save driver: ' + error.message, 'error');
    } finally {
        saveBtn.disabled = false;
        saveBtn.textContent = 'Save Driver';
    }
}

function deleteDriver(id) {
    document.getElementById('delete-driver-id').value = id;
    deleteModal.show();
}

async function confirmDelete() {
    const id = document.getElementById('delete-driver-id').value;
    
    try {
        await DriversAPI.delete(id);
        showToast('Driver deleted successfully', 'success');
        deleteModal.hide();
        await loadData();
    } catch (error) {
        console.error('Failed to delete driver:', error);
        showToast('Failed to delete driver: ' + error.message, 'error');
    }
}
</script>
}
