<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin - Vehicle Tracker</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg">
    
    <!-- Fonts (Local with CDN Fallback) -->
    @inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment
    @{
        var arimoExists = System.IO.File.Exists(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "fonts/arimo-regular.ttf"));
        var materialExists = System.IO.File.Exists(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "fonts/material-symbols-outlined.woff2"));
    }

    @if (arimoExists)
    {
        <link href="~/css/arimo.css" rel="stylesheet">
    }
    else
    {
        <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@400;500;600;700&display=swap" rel="stylesheet">
    }
    
    @if (materialExists)
    {
        <link rel="stylesheet" href="~/css/material-symbols.css">
    }
    else
    {
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&display=swap">
    }
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom Admin CSS (Bootstrap overrides) -->
    <link rel="stylesheet" href="~/css/admin-bootstrap.css">
</head>
<body class="admin-page">
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="admin-sidebar__header">
                <a href="/" class="admin-logo">
                    <img src="~/images/logo.svg" alt="" class="admin-logo__icon">
                    <span>Vehicle Tracker</span>
                </a>
            </div>
            
            <nav class="admin-nav">
                <a href="/Admin" class="admin-nav__item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "admin-nav__item--active" : "")">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span>Dashboard</span>
                </a>
                <a href="/Admin/Vehicles" class="admin-nav__item @(ViewContext.RouteData.Values["action"]?.ToString() == "Vehicles" ? "admin-nav__item--active" : "")">
                    <span class="material-symbols-outlined">directions_car</span>
                    <span>Vehicles</span>
                </a>
                <a href="/Admin/Drivers" class="admin-nav__item @(ViewContext.RouteData.Values["action"]?.ToString() == "Drivers" ? "admin-nav__item--active" : "")">
                    <span class="material-symbols-outlined">badge</span>
                    <span>Drivers</span>
                </a>
                <a href="/Admin/Incidents" class="admin-nav__item @(ViewContext.RouteData.Values["action"]?.ToString() == "Incidents" ? "admin-nav__item--active" : "")">
                    <span class="material-symbols-outlined">warning</span>
                    <span>Incidents</span>
                </a>
                <a href="/Admin/Users" class="admin-nav__item @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "admin-nav__item--active" : "")">
                    <span class="material-symbols-outlined">group</span>
                    <span>Users</span>
                </a>
            </nav>
            
            <div class="admin-sidebar__footer">
                <a href="/Home/Index" class="admin-nav__item">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span>Back to Map</span>
                </a>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="admin-main">
            <header class="admin-header">
                <h1 class="admin-header__title">@ViewData["Title"]</h1>
                <div class="admin-header__user">
                    <span id="admin-username">Admin</span>
                    <div class="admin-avatar">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                </div>
            </header>
            
            <div class="admin-content">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Toast Container -->
    <div class="toast-container-admin" id="toast-container">
        <!-- Toasts will be inserted here -->
    </div>
    
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- API JS -->
    <script src="~/js/api.js"></script>
    
    <!-- Shared Admin Functions -->
    <script>
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toastId = 'toast-' + Date.now();
            
            const toastHtml = `
                <div id="${toastId}" class="toast toast-admin toast-${type}" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-body">
                        <span class="material-symbols-outlined toast-icon">${type === 'success' ? 'check_circle' : 'error'}</span>
                        <span class="flex-grow-1">${message}</span>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', toastHtml);
            
            const toastEl = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastEl, { delay: 5000 });
            toast.show();
            
            toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
